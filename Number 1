/**Code was inspired code by, ggStrider and rarmint, thanks for sorces and functions which i didn't know before**/
#include <iostream>
using namespace std;

int main() {
    setlocale(0,".1251");
int a, b;
double S, P, Sum, Dif, Mul, Div;
cout << "enter a (length), enter b (width)"<<endl;
cin >> a >> b;
if(a <= 0 || b <= 0) {
        cout << "Values, width or length can't be less then 0, or if text entered" << endl;
        return 1;
    }
    S = a*b;
    cout<<("S =")<<S<<endl;
    
    P = 2*(a+b);
    cout<<("P =")<<P<<endl;

    Sum = S+P;
    cout<<("Sum S and P")<<Sum<<endl;

Dif = S-P;
cout<<("Dif S and P")<<Dif<<endl;

Mul = S*P;
cout<<("Mul S and P")<<Mul<<endl;

Div = S/P;
cout<<("Div S and P")<<Div<<endl;

cout << endl << "Memory long: ";
    cout << endl << &a << endl << &b << endl << &S << endl << &P << endl << &Sum << endl << &Dif << endl << &Div << endl << &Mul << endl << &Div<<endl;

    return 0;
}